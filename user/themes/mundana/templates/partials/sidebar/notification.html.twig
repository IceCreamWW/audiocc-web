{# NOTIIFCATIONS SECTION - SIDEBAR #}

<div class="sidebar-content my-5">
    <h3 class="h4 font-weight-bold spanborder">
        <span>{{ block_title }}</span>
    </h3>
    <ol class="list-featured">
        {% for p in page.evaluate({'@taxonomy.tag':notifications_tag}).order('date', 'desc').slice(0,featuredposts_number) %}
            <li class="mb-4">
                <span>
                    <h3 class="h2 font-weight-bold h6">
                        <a href="{{ p.header.url }}" class="text-dark">{{ p.title|raw }}</a>
                    </h2>
                </span>
            </li>
        {% endfor %}
    </ol>
</div>
